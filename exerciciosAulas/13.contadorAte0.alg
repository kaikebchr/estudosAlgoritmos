algoritmo "contadorAte0"
var
    contador: inteiro

inicio
    escreval("Contagem regressiva at√© o 0...")
    escreval("")
    
    contador <- 10
    enquanto (contador >= 0) faca
        escreval(contador, "...")
        contador <- contador - 1
    fimenquanto

    escreval("")
    escreval("Contagem finalizada.")

fimalgoritmo
